import java.awt.event.ActionEvent;

public class PainelPorto {

	private JFrame frame;
	public JPanel panelCadastroCaminhao;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					PainelPorto window = new PainelPorto();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public PainelPorto() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.getContentPane().setLayout(new CardLayout(0, 0));
		
		JPanel panelMenu = new JPanel();
		frame.getContentPane().add(panelMenu, "name_1202237123459902");
		panelMenu.setLayout(null);
		
		JMenuBar menuCadastro = new JMenuBar();
		menuCadastro.setToolTipText("");
		menuCadastro.setBounds(0, 0, 59, 22);
		panelMenu.add(menuCadastro);
		
		JMenu mnCadastro = new JMenu("Cadastro");
		menuCadastro.add(mnCadastro);
		
		JMenuItem mntmCaminho = new JMenuItem("Caminh\u00E3o");
		mntmCaminho.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
				panelCadastroCaminhao.setVisible(true);
			}
		});
		mnCadastro.add(mntmCaminho);
		
		JMenuItem mntmNavio = new JMenuItem("Navio");
		mnCadastro.add(mntmNavio);
		
		JMenuBar menuBarPatio = new JMenuBar();
		menuBarPatio.setBounds(58, 0, 99, 22);
		panelMenu.add(menuBarPatio);
		
		JMenu mnPatio = new JMenu("Patio");
		menuBarPatio.add(mnPatio);
		
		panelCadastroCaminhao = new PainelCadastroCaminhao();
		panelCadastroCaminhao.setBounds(0, 0, 588, 382);
		panelMenu.add(panelCadastroCaminhao);
		panelCadastroCaminhao.setLayout(null);
		
		JPanel panelCadastroNavio = new JPanel();
		panelCadastroNavio.setBounds(0, 0, 588, 382);
		panelMenu.add(panelCadastroNavio);
		panelCadastroNavio.setLayout(null);
	}
}
